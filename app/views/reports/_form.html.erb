<%= form_for(@report, url: api_reports_path) do |f| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this error from being saved:</h2>

      <ul>
      <% @report.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <fieldset>
      <%= f.hidden_field :question_id %>
      
      <div class="field">
        <%= f.label :problem %><br>
        <%= f.select :problem, Report.valid_problems %>
      </div>

      <div class="field">
        <%= f.label :comment %><br>
        <%= f.text_area :comment, rows: 5 %>
      </div>
    </fieldset>

  <div class="actions">
    <%= f.submit class: "button small success" %>
  </div>
<% end %>
